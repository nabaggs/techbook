<%=form_for(@message)do |f|%>
	<%if @message.errors.any?%>
		<div class="error_explanation">
			<h2><%=pluralize(@message.errors.count,"error")%>
				prohibited this blog post from being saved: </h2>
			</h2>
			<ul>
				<%@message.errors.full_messages.each do|errorMessage|%>
					<li><%=errorMessage%></li>
				<%end%>
			</ul>
		</div>
	<%end%>
	<div class="form-group">
		<%=f.text_field :subject,class: "form-control",placeholder:"Subject"%>
	</div>
	<div class="form-group">
		<%=f.number_field :sender_id,value: current_user.id%>
	</div>
	<div class="form-group">
		<%=f.number_field :recipient_id,value: current_user.id%>
	</div>
	<div class="form-group">
		<%=f.text_area :body,class: "form-control",placeholder:"Write your message here..."%>
	</div>
	<div class="actions">
		<%=f.submit "Post",class: "btn btn-default"%>
	</div>
<%end%>