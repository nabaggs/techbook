<div class="jumbotron text-center">
		<h2><b>Peeps<b></h2>
		<div class="btn-group" role="group" aria-label="People Groups">
			<%=link_to "All Users", users_path,class: "btn btn-default #{'active' unless params[:people]}"%>
			<%=link_to "Friends",users_path(people:'friends'),class: "btn btn-default #{'active' if params[:people]=='friends'}"%>
			<%=link_to "Pending",users_path(people:'pending'),class: "btn btn-default #{'active' if params[:people]=='pending'}"%>
			<%=link_to "Invites",users_path(people:'requested'),class: "btn btn-default #{'active' if params[:people]=='requested'}"%>
		</div>
	</div>
<div class="container">
	<div class="row">
		<%=render @users%>
	</div>
</div>